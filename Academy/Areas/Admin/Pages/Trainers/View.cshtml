@page
@model Academy.Areas.Admin.Pages.Trainers.ViewModel
@{
    ViewBag.Title = "Trainers";
    ViewBag.pTitle = "View Details";
    ViewBag.pageTitle = "Trainers";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">

        <!-- Department Card 3 -->

        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Trainer Information</h4>
            </div><!-- end card header -->

            <div class="card-img-container" style="text-align: center; margin-bottom: 20px;">
                <img src="/@Model.Trainer.Image" alt="Trainer Image" class="img-fluid" style="max-height: 250px; object-fit: cover;">
            </div>

            @* <img src="https://via.placeholder.com/350x200" class="card-img-top" alt="Department Image"> *@
            <div class="card-body">
                @*  <h5 class="card-title">Department of Human Resources</h5>
                <p class="card-text">The HR Department is dedicated to employee development, recruitment, and ensuring a positive work environment.</p> *@
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><strong>Trainer Name:</strong> @Model.Trainer.TrainerName</li>
                    <li class="list-group-item"><strong>Trainer User Name:</strong> @Model.Trainer.UserName</li>
                    <li class="list-group-item"><strong>Trainer Email:</strong> @Model.Trainer.TrainerEmail</li>
                    <li class="list-group-item"><strong>Trainer Phone:</strong> @Model.Trainer.TrainerPhone</li>
                    <li class="list-group-item"><strong>Trainer Address:</strong> @Model.Trainer.TrainerAddress</li>
                    <li class="list-group-item"><strong>Trainer Hiring Date:</strong> @Model.Trainer.HiringDate</li>
                    <li class="list-group-item"><strong>Current Branch:</strong> @Model.CurrentBranch</li>

                    <li class="list-group-item"><strong>Current Department:</strong> @Model.CurrentDepartment</li>

                    @if (Model.Trainer.IsActive)
                    {
                        <li class="list-group-item"><strong>Status:</strong>    Active</li>
                    }
                    else
                    {
                        <li class="list-group-item"><strong>Status:</strong>    Not Active</li>
                    }

                </ul>
                <!-- Links to other pages -->
                <div class="d-flex justify-content-center mt-4">
                    <a href="/Admin/Trainers/TrainerCategories?id=@Model.Trainer.TrainerId" class="link text-primary me-2">Trainer Categories</a>
                   
                </div>

            </div>
        </div>
    </div>
</div>
