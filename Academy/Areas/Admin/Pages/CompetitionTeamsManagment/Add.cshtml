@page
@model Academy.Areas.Admin.Pages.CompetitionTeamsManagment.AddModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    ViewBag.Title = "Competition Teams";
    ViewBag.pTitle = "Add Competition Team";
    ViewBag.pageTitle = "Competition Teams";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Add Competition Team</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post" enctype="multipart/form-data">
                 
                        <div class="mb-3">
                            <label asp-for="@Model.CompetitionTeamVM.Name" class="form-label">Competition Team  Title</label>
                            <input asp-for="@Model.CompetitionTeamVM.Name" class="form-control" />
                            <span asp-validation-for="@Model.CompetitionTeamVM.Name" class="text-danger"></span>
                        </div>

                      

                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.CompetitionTeamVM.CompetitionDepartmentId">Competition Department</label>
                            <select  asp-for=" @Model.CompetitionTeamVM.CompetitionDepartmentId" asp-items="@(new SelectList(Model.CompetitionDepartments, "Id", "Name"))" class="form-select">
                                <option selected disabled value="0">Choose</option>

                            </select>

                            <span asp-validation-for="@Model.CompetitionTeamVM.CompetitionDepartmentId" class="text-danger"></span>

                        </div><!--end col-->
                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.CompetitionTeamVM.TrainerId">Trainer</label>
                            <select asp-for=" @Model.CompetitionTeamVM.TrainerId" asp-items="@(new SelectList(Model.Trainers, "TrainerId", "TrainerName"))" class="form-select">
                                <option selected disabled value="0">Choose</option>

                            </select>

                            <span asp-validation-for="@Model.CompetitionTeamVM.TrainerId" class="text-danger"></span>

                        </div><!--end col-->


                        <div class="mb-3" >
                            <label class="form-label" asp-for="@Model.CompetitionTeamVM.SelectedTrainees">Trainees</label>
                            <select asp-for="@Model.CompetitionTeamVM.SelectedTrainees" class="form-control form-select custom-select" asp-items="@(new SelectList(Model.Trainees, "TraineeId", "TraineeName"))" multipl>

                                <option disabled value="0">Choose...</option>

                            </select>


                            <span asp-validation-for="@Model.CompetitionTeamVM.SelectedTrainees" class="text-danger"></span>

                        </div><!--end col-->

                       
                        
                        <div class="mb-3">


                            <label for="fileUpload" class="form-label">Choose an Image</label>
                            <div class="input-group">
                                <input type="file" accept=".png, .jpg, .jpeg" class="form-control" id="fileUpload" name="fileUpload" />

                            </div>



                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Add Team</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div><!--end row-->



<script>


        $(document).ready(function() {
            $('.custom-select').select2({
                //  placeholder: "Choose...",
                //  allowClear:false
            });
            });

  
</script>