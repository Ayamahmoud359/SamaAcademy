@page
@model Academy.Areas.Admin.Pages.Parents.AddModel
@{
}
@{
    ViewBag.Title = "Add Parent";
    ViewBag.pTitle = "Add Parent";
    ViewBag.pageTitle = "Add";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Add Parent</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form method="post">

                        <div class="mb-3">
                            <label asp-for="@Model.ParentVM.ParentName" class="form-label">Parent Name</label>
                            <input asp-for="@Model.ParentVM.ParentName" class="form-control" />
                            <span asp-validation-for="@Model.ParentVM.ParentName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.ParentVM.Email" class="form-label">Parent Email</label>
                            <input asp-for="@Model.ParentVM.Email" class="form-control" />
                            <span asp-validation-for="@Model.ParentVM.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.ParentVM.ParentPhone" class="form-label">Parent Phone</label>
                            <input asp-for="@Model.ParentVM.ParentPhone" class="form-control" />
                            <span asp-validation-for="@Model.ParentVM.ParentPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.ParentVM.ParentAddress" class="form-label">Parent Address</label>
                            <input asp-for="@Model.ParentVM.ParentAddress" class="form-control" />
                            <span asp-validation-for="@Model.ParentVM.ParentAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class= "form-label" asp-for="@Model.ParentVM.BranchId">Branch</label>
                            <select asp-for="@Model.ParentVM.BranchId" asp-items="@(new SelectList(Model.Branches, "BranchId", "BranchNameEN"))" class="form-select" data-choices data-choices-sorting="true" id="inlineFormSelectPref">
                                <option selected disabled>Choose...</option>

                            </select>
                            <span asp-validation-for="@Model.ParentVM.BranchId" class="text-danger"></span>

                        </div><!--end col-->

                        
                        <div class="mb-3">

                            <label class="form-label" asp-for="@Model.ParentVM.Password">Password</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                                <input type="password" asp-for="@Model.ParentVM.Password" class="form-control pe-5 password-input" placeholder="Enter password" id="password-input">
                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>

                            </div>
                            <span asp-validation-for="@Model.ParentVM.Password" class="text-danger"></span>

                        </div>

                        <div class="mb-3">

                            <label class="form-label" asp-for="@Model.ParentVM.ConfirmPassword">Confirm Password</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                                <input type="password" asp-for="@Model.ParentVM.ConfirmPassword" class="form-control pe-5 password-input" placeholder="Enter password" id="password-input">
                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>

                            </div>
                            <span asp-validation-for="@Model.ParentVM.ConfirmPassword" class="text-danger"></span>

                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Add Parent</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div><!--end row-->
<!-- prismjs plugin -->
<script src="~/assets/libs/prismjs/prism.js"></script>

<script src="~/assets/js/app.js"></script>

<!-- particles js -->
<script src="~/assets/libs/particles.js/particles.js"></script>
<!-- particles app js -->
<script src="~/assets/js/pages/particles.app.js"></script>
<!-- password-addon init -->
<script src="~/assets/js/pages/password-addon.init.js"></script>

