@page
@model Academy.Areas.Admin.Pages.Parents.AddModel
@{
}
@{
    ViewBag.Title = "Parents";
    ViewBag.pTitle = "Add Parent";
    ViewBag.pageTitle = "Parents";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Add Parent</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.UserName" class="form-label">User Name</label>
                            <input asp-for="@Model.UserName" class="form-control" />
                            <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.ParentVM.ParentName" class="form-label">Parent Name</label>
                            <input asp-for="@Model.ParentVM.ParentName" class="form-control" />
                            <span asp-validation-for="@Model.ParentVM.ParentName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.ParentVM.ParentEmail" class="form-label">Parent Email</label>
                            <input asp-for="@Model.ParentVM.ParentEmail" class="form-control" />
                            <span asp-validation-for="@Model.ParentVM.ParentEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.ParentVM.ParentPhone" class="form-label">Parent Phone</label>
                            <input asp-for="@Model.ParentVM.ParentPhone" class="form-control" />
                            <span asp-validation-for="@Model.ParentVM.ParentPhone" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.ParentVM.ParentAddress" class="form-label">Parent Address</label>
                            <input asp-for="@Model.ParentVM.ParentAddress" class="form-control" />
                            <span asp-validation-for="@Model.ParentVM.ParentAddress" class="text-danger"></span>
                        </div>
                   

                        
                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.ParentVM.Password">Password</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                                <input asp-for="@Model.ParentVM.Password" class="form-control pe-5 password-input" id="passwordInput">
                                <span class="input-group-text" id="togglePassword" onclick="togglePassword('passwordInput', 'togglePassword')">
                                    <i class="fa fa-eye"></i> <!-- Font Awesome Eye Icon -->
                                </span>
                            </div>
                            <span asp-validation-for="@Model.ParentVM.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label" asp-for="@Model.ParentVM.ConfirmPassword">Confirm Password</label>
                            <div class="position-relative auth-pass-inputgroup mb-3">
                                <input type="password" asp-for="@Model.ParentVM.ConfirmPassword" class="form-control pe-5 password-input" id="confirmPasswordInput">
                                <span class="input-group-text" id="toggleConfirmPassword" onclick="togglePassword('confirmPasswordInput', 'toggleConfirmPassword')">
                                    <i class="fa fa-eye"></i> <!-- Font Awesome Eye Icon -->
                                </span>
                            </div>
                            <span asp-validation-for="@Model.ParentVM.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Add Parent</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div><!--end row-->
<script>
  

    function togglePassword(inputId, iconId) {
        var passwordField = document.getElementById(inputId);
        var eyeIcon = document.getElementById(iconId).getElementsByTagName("i")[0];

        // Toggle the type between 'password' and 'text'
        if (passwordField.type === "password") {
            passwordField.type = "text"; // Show password
            eyeIcon.classList.remove("fa-eye");
            eyeIcon.classList.add("fa-eye-slash"); // Change icon to eye-slash
        } else {
            passwordField.type = "password"; // Hide password
            eyeIcon.classList.remove("fa-eye-slash");
            eyeIcon.classList.add("fa-eye"); // Change icon back to eye
        }
    }
</script>

