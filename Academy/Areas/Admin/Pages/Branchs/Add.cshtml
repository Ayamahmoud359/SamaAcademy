@page
@model Academy.Areas.Admin.Pages.Branchs.AddModel
@{
    ViewBag.Title = "Branch";
    ViewBag.pTitle = "Add Branch";
    ViewBag.pageTitle = "Branchs";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Add Branch</h4>
               
            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post" enctype="multipart/form-data">
                        
                        <div class="mb-3">
                            <label asp-for="@Model.BranchVM.BranchName" class="form-label">Branch Name</label>
                            <input asp-for="@Model.BranchVM.BranchName" class="form-control" />
                            <span asp-validation-for="@Model.BranchVM.BranchName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.BranchVM.BranchAddress" class="form-label">Branch Address</label>
                            <input asp-for="@Model.BranchVM.BranchAddress" class="form-control" />
                            <span asp-validation-for="@Model.BranchVM.BranchAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                          
                                   
                                        <label for="fileUpload" class="form-label">Choose an Image</label>
                                        <div class="input-group">
                                    <input type="file" accept=".png, .jpg, .jpeg" class="form-control" id="fileUpload" name="fileUpload" />
                                       
                                        </div>
                                   

                               
                        </div>

                        
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Add Branch</button>
                        </div>
                    </form>
                </div>
                
            </div>
        </div>
    </div>
    
</div><!--end row-->





 