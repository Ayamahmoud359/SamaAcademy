@page
@model Academy.Areas.Admin.Pages.Branchs.ViewModel
@{
    ViewBag.Title = "Branchs";
    ViewBag.pTitle = "View Details";
    ViewBag.pageTitle = "Branchs";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Branch Information</h4>
            </div><!-- end card header -->

            <div class="card-body">
                <div class="live-preview">

                    <!-- Image inside the card -->
                    <div class="card-img-container" style="text-align: center; margin-bottom: 20px;">
                        <img src="/@Model.Branch.Image" alt="Branch Image" class="img-fluid" style="max-height: 250px; object-fit: cover;">
                    </div>

                    <!-- Table with branch information -->
                    <div class="table-responsive">
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <th class="ps-0 pe-2 align-middle" style="padding: 0.25rem 0.5rem;">Branch Name :</th>
                                    <td class="text-muted ps-0 pe-2 align-middle" style="padding: 0.25rem 0.5rem;">@Model.Branch.BranchName</td>
                                </tr>
                                <tr>
                                    <th class="ps-0 pe-2 align-middle" scope="row" style="padding: 0.25rem 0.5rem;">Address:</th>
                                    <td class="text-muted ps-0 pe-2 align-middle" style="padding: 0.25rem 0.5rem;">@Model.Branch.BranchAddress</td>
                                </tr>
                                @if (Model.Branch.IsActive)
                                {
                                    <tr>
                                        <th class="ps-0 pe-2 align-middle" scope="row" style="padding: 0.25rem 0.5rem;">Status :</th>
                                        <td class="text-muted ps-0 pe-2 align-middle" style="padding: 0.25rem 0.5rem;">Active</td>
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        <th class="ps-0 pe-2 align-middle" scope="row" style="padding: 0.25rem 0.5rem;">Status :</th>
                                        <td class="text-muted ps-0 pe-2 align-middle" style="padding: 0.25rem 0.5rem;">NotActive</td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                    <!-- Links to other pages -->
                    <div class="d-flex justify-content-center mt-4">
                        <a href="/Admin/Branchs/Departments?id=@Model.Branch.BranchId" class="btn btn-primary me-2">Branch Departments</a>
                        <a href="branch-trainers.html" class="btn btn-primary">Branch Trainers</a>
                    </div>

                </div><!-- end live-preview -->
            </div><!-- end card body -->
        </div><!-- end card -->
    </div>
</div>
