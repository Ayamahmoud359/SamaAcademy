@page
@model Academy.Areas.Admin.Pages.Departments.AddModel
@{
}
@{
    ViewBag.Title = "Add Department";
    ViewBag.pTitle = "Add Department";
    ViewBag.pageTitle = "Add";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Add Department</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <form method="post">

                        <div class="mb-3">
                            <label asp-for="@Model.Dept.DepartmentNameAR" class="form-label">Department Name</label>
                            <input asp-for="@Model.Dept.DepartmentNameAR" class="form-control" />
                            <span asp-validation-for="@Model.Dept.DepartmentNameAR" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.Dept.DepartmentDescriptionAR" class="form-label">Department Description</label>
                            <input asp-for="@Model.Dept.DepartmentDescriptionAR" class="form-control" />
                            <span asp-validation-for="@Model.Dept.DepartmentDescriptionAR" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="inlineFormSelectPref">Branch</label>
                            <select asp-for="@Model.Dept.BranchId" asp-items="@(new SelectList(Model.Branches, "BranchId", "BranchNameEN"))" class="form-select" data-choices data-choices-sorting="true" id="inlineFormSelectPref">
                                <option selected disabled>Choose...</option>

                            </select>
                            <span asp-validation-for="@Model.Dept.BranchId" class="text-danger"></span>

                        </div><!--end col-->
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Add Department</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>

</div><!--end row-->
<!-- prismjs plugin -->
<script src="~/assets/libs/prismjs/prism.js"></script>

<script src="~/assets/js/app.js"></script>

<!-- particles js -->
<script src="~/assets/libs/particles.js/particles.js"></script>
<!-- particles app js -->
<script src="~/assets/js/pages/particles.app.js"></script>
<!-- password-addon init -->
<script src="~/assets/js/pages/password-addon.init.js"></script>
