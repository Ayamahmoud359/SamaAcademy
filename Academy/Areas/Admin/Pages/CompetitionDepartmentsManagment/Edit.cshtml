@page
@model Academy.Areas.Admin.Pages.CompetitionDepartmentsManagment.EditModel
@{
    ViewBag.Title = "Competition DepartmentS";
    ViewBag.pTitle = "Edit Competition Department";
    ViewBag.pageTitle = "Competition DepartmentS";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xxl-12">
        <div class="card">
            <div class="card-header align-items-center d-flex">
                <h4 class="card-title mb-0 flex-grow-1">Edit Competition Department</h4>

            </div><!-- end card header -->
            <div class="card-body">
                <div class="live-preview">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post">
                        <div class="mb-3" style="display:none">
                            <label asp-for="@Model.CompetitionDepartmentVM.Id" class="form-label">Competition Department Id</label>
                            <input asp-for="@Model.CompetitionDepartmentVM.Id" class="form-control" />
                            <span asp-validation-for="@Model.CompetitionDepartmentVM.Id" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="@Model.CompetitionDepartmentVM.Name" class="form-label">Competition Department Title</label>
                            <input asp-for="@Model.CompetitionDepartmentVM.Name" class="form-control" />
                            <span asp-validation-for="@Model.CompetitionDepartmentVM.Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.CompetitionDepartmentVM.Description" class="form-label"> Competition Department Description</label>
                            <textarea asp-for="@Model.CompetitionDepartmentVM.Description" class="form-control"> </textarea>
                            <span asp-validation-for="@Model.CompetitionDepartmentVM.Description" class="text-danger"></span>
                        </div>

                       
                        <div class="mb-3">
                            @Html.CheckBoxFor(m => m.CompetitionDepartmentVM.IsActive, new { @class = "form-check-input" })
                            <label class="form-check-label" for="Active">
                                Is Active?
                            </label>
                        </div>
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Save </button>
                            <a href="/Admin/CompetitionDepartmentsManagment" class="text-primary d-inline-block">
                                <button type="button" class="btn btn-primary">Back To List </button>
                            </a>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
